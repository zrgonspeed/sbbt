    <style name="style.zrg" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/pro2</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">5000</item>
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="android:mirrorForRtl">false</item>
    </style>
</resources>
