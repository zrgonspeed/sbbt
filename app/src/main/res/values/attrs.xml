<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DirectionView">
        <!-- 内弧的半径 -->
        <attr name="in_arc_radius" format="integer" />
        <!-- 外弧的半径 -->
        <attr name="out_arc_radius" format="integer" />
        <!-- 弧的粗细 -->
        <attr name="arc_width" format="integer" />
        <!-- 箭头缩放大小 -->
        <attr name="arrow_size" format="float" />
        <!-- 球的半径 -->
        <attr name="ball_radius" format="integer" />

    </declare-styleable>
    <declare-styleable name="HistogramListView">
        <!-- 主要背景色 -->
        <attr name="bottomHeight" format="integer" />
        <!-- 柱状高度 -->
        <attr name="chartHeight" format="float" />
        <!-- 柱状宽度 -->
        <attr name="chartWidth" format="float" />
        <!-- 柱状间隔 -->
        <attr name="chartPadding" format="float" />
        <!-- 标尺最大值 -->
        <attr name="maxValue" format="integer" />
        <!-- 模式名称 -->
        <attr name="modeName" format="string" />
        <!-- 模式名称的字体大小 -->
        <attr name="txtSize" format="dimension" />
        <!-- 整个控件的高度与layout_height要保持一致 -->
        <attr name="viewHeight" format="dimension|float" />
        <!-- 整个控件的宽度度与layout_width要保持一致 -->
        <attr name="viewWidth" format="dimension|float" />
    </declare-styleable>

    <declare-styleable name="MultiClickImageView">
        <!-- 点击次数 -->
        <attr name="clickCount" format="integer" />
        <!-- 总时间(秒) -->
        <attr name="clickTime" format="integer" />
    </declare-styleable>

    <declare-styleable name="BlurringView">
        <attr name="blurRadius" format="integer" />
        <attr name="downSampleFactor" format="integer" />
        <attr name="overlayColor" format="color" />
    </declare-styleable>


    <declare-styleable name="BarGraph">
        <!-- 已完成的颜色（渐变色的开始） -->
        <attr name="bar_hasCompletedColorStart" format="reference|color" />
        <!-- 已完成的颜色（渐变色的结束如果没有设，则只有开始颜色） -->
        <attr name="bar_hasCompletedColorEnd" format="reference|color" />
        <!-- 当前段的颜色（渐变色的开始） -->
        <attr name="bar_currCompletedColorStart" format="reference|color" />
        <!-- 当前段的颜色（渐变色的结束如果没有设，则只有开始颜色） -->
        <attr name="bar_currCompletedColorEnd" format="reference|color" />
        <!-- 未完成的颜色（渐变色的开始） -->
        <attr name="bar_unCompletedColorStart" format="reference|color" />
        <!-- 未完成的颜色（渐变色的结束如果没有设，则只有开始颜色） -->
        <attr name="bar_unCompletedColorEnd" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="ScaleUnitView">
        <attr name="suv_txt_gravity">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
        <attr name="suv_max_value" format="reference|float"/>
        <attr name="suv_min_value" format="reference|float"/>
        <attr name="suv_val_count" format="reference|integer"/>
        <attr name="suv_val_point_count" format="reference|integer"/>
        <!-- 刻度连线的粗细 -->
        <attr name="suv_line_stroke_width" format="reference|float"/>
        <!-- 凸出的刻度粗细 -->
        <attr name="suv_scale_stroke_width" format="reference|float"/>
        <!-- 凸出的刻度长度 -->
        <attr name="suv_scale_width" format="dimension"/>
        <attr name="suv_margin_y" format="reference|integer"/>
        <attr name="suv_txt_size" format="reference|float"/>
        <attr name="suv_color" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="RoundProgressBarGraph">
        <!--  进度条的半径  -->
        <attr name="rpb_radius" format="float|dimension" />
        <!--  进度条的粗细  -->
        <attr name="rpb_width" format="float|dimension" />
        <!-- 开始颜色（渐变色的开始） -->
        <attr name="rpb_start_color" format="color|reference" />
        <!-- 结束颜色（渐变色的结束如果没有设，则只有开始颜色） -->
        <attr name="rpb_end_color" format="color|reference" />
        <!--  是否需要背景圈  -->
        <attr name="rpb_background" format="boolean" />
        <attr name="rpb_background_color" format="color|reference" />
        <!-- 开始角度，从右边顺时针计算角度，，默认-90度 -->
        <attr name="cpb_start_angle" format="float" />
        <!-- 扫过的角度，从右边顺时针计算角度，，默认360度 -->
        <attr name="cpb_sweep_angle" format="float" />
    </declare-styleable>

    <declare-styleable name="SportRoundProgressGraph">
        <!-- 开始颜色（渐变色的开始） -->
        <attr name="sport_rpg_start_color" format="color|reference" />
        <!-- 结束颜色（渐变色的结束如果没有设，则只有开始颜色） -->
        <attr name="sport_rpg_end_color" format="color|reference" />
        <!-- 开始角度，从右边顺时针计算角度，，默认-90度 -->
        <attr name="sport_rpg_start_angle" format="float" />
        <!-- 扫过的角度，从右边顺时针计算角度，，默认360度 -->
        <attr name="sport_rpg_sweep_angle" format="float" />
        <!-- 数值 -->
        <attr name="sport_rpg_value" format="string|reference" />
        <!-- 说明 -->
        <attr name="sport_rpg_tip" format="string|reference" />
        <!-- 单位 -->
        <attr name="sport_rpg_unit" format="reference|string" />
    </declare-styleable>

</resources>

