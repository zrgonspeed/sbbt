<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bk_0">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_px_30_y"
        android:gravity="center"
        android:text="@string/string_fitness"
        android:textColor="@color/textView_white"
        android:textSize="@dimen/font_size_30pt"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_program_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_210_x"
            android:layout_marginTop="@dimen/dp_px_189_y"
            android:src="@drawable/img_program_frame_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_281_x"
            android:layout_marginTop="@dimen/dp_px_240_y"
            android:gravity="center"
            android:text="@string/string_select_gender"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_281_x"
            android:layout_marginTop="@dimen/dp_px_376_y"
            android:gravity="center"
            android:text="@string/string_select_age"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_281_x"
            android:layout_marginTop="@dimen/dp_px_512_y"
            android:gravity="center"
            android:text="@string/string_select_weight"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_281_x"
            android:layout_marginTop="@dimen/dp_px_648_y"
            android:gravity="center"
            android:text="@string/string_select_time"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_gender_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_556_x"
            android:layout_marginTop="@dimen/dp_px_222_y"
            android:src="@drawable/btn_male_2" />

        <RadioGroup
            android:id="@+id/rg_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_556_x"
            android:layout_marginTop="@dimen/dp_px_354_y">

            <RadioButton
                android:id="@+id/rb_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_px_50_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_px_50_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold"
                android:visibility="gone" />

        </RadioGroup>

        <TextView
            android:id="@+id/txt_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_825_x"
            android:layout_marginTop="@dimen/dp_px_505_y"
            android:gravity="center"
            android:text="@string/string_unit_kg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:id="@+id/txt_time_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_825_x"
            android:layout_marginTop="@dimen/dp_px_640_y"
            android:gravity="center"
            android:text="@string/string_unit_min"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_gender_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_1027_x"
            android:layout_marginTop="@dimen/dp_px_222_y"
            android:src="@drawable/img_gender_draw_1" />

        <RadioGroup
            android:id="@+id/rg_gender_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_1027_x"
            android:layout_marginTop="@dimen/dp_px_222_y"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_male"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_px_230_x"
                android:background="@drawable/btn_female"
                android:button="@null" />

        </RadioGroup>

    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_1470_x"
        android:layout_marginTop="@dimen/dp_px_789_y"
        android:src="@drawable/btn_start" />

    <TextView
        android:layout_width="@dimen/dp_px_400_x"
        android:layout_height="@dimen/dp_px_77_y"
        android:layout_marginStart="@dimen/dp_px_1050_x"
        android:layout_marginTop="@dimen/dp_px_800_y"
        android:gravity="center|right"
        android:text="@string/string_select_start_hint"
        android:textColor="@color/textView_white"
        android:textSize="@dimen/font_size_15pt" />

    <include
        layout="@layout/layout_under_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px_955_y" />
</RelativeLayout>