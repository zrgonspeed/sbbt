        android:id="@+id/rl_center_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_run_pop_tip"
            android:layout_width="@dimen/dp_px_933_x"
            android:layout_height="@dimen/dp_px_363_y"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_px_180_y"
            android:src="@drawable/img_pop_warmup" />

    </RelativeLayout>

    <!-- 底部控制栏 -->
