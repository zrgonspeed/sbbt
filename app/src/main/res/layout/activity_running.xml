        <ImageView
            android:id="@+id/btn_pause_quit"
            android:layout_width="@dimen/dp_px_179_x"
            android:layout_height="@dimen/dp_px_126_y"
            android:layout_marginStart="@dimen/dp_px_443_x"
            android:layout_marginTop="@dimen/dp_px_551_y"
            android:src="@drawable/btn_pause_quit" />

        <ImageView
            android:id="@+id/btn_pause_continue"
            android:layout_width="@dimen/dp_px_179_x"
            android:layout_height="@dimen/dp_px_126_y"
            android:layout_marginStart="@dimen/dp_px_659_x"
            android:layout_marginTop="@dimen/dp_px_551_y"
            android:src="@drawable/btn_pause_continue" />

        <!--        <ImageView-->
        <!--            android:id="@+id/btn_skip"-->
