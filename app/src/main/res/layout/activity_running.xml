            android:layout_marginStart="@dimen/dp_px_316_x"
            android:layout_marginTop="@dimen/dp_px_640_y"
            android:src="@drawable/btn_sportmode_incline_down" />

        <ImageView
            android:id="@+id/btn_start_stop_skip"
            android:layout_width="@dimen/dp_px_280_x"
            android:layout_height="@dimen/dp_px_126_y"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_px_551_y"
            android:src="@drawable/btn_sportmode_stop" />

        <com.run.treadmill.widget.LongClickImage
            android:id="@+id/btn_speed_up"
            android:layout_width="@dimen/dp_px_125_x"
            android:layout_height="@dimen/dp_px_66_y"
            android:layout_marginStart="@dimen/dp_px_1014_x"
            android:layout_marginTop="@dimen/dp_px_640_y"
            android:src="@drawable/btn_sportmode_speed_up" />

        <ImageView
