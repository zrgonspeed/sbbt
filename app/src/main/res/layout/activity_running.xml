        <TextView
            android:id="@+id/tv_incline"
            android:layout_width="@dimen/dp_px_140_x"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_130_x"
            android:layout_marginTop="@dimen/dp_px_60_y"
