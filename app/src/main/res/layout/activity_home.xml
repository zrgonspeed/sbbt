<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="@dimen/dp_px_1920_x"
    android:layout_height="@dimen/dp_px_1080_x">

    <ImageView
        android:id="@+id/iv_home_bg"
        android:layout_width="@dimen/dp_px_1920_x"
        android:layout_height="@dimen/dp_px_1080_x"
        android:background="@drawable/bk_background_idle_mode_1" />

    <ImageView
        android:id="@+id/iv_home_logo"
        android:layout_width="@dimen/dp_px_120_x"
        android:layout_height="@dimen/dp_px_120_x"
        android:layout_marginStart="@dimen/dp_px_40_x"
        android:layout_marginTop="@dimen/dp_px_40_x"
        android:background="@drawable/img_logo" />

    <com.run.treadmill.widget.MultiClickAndLongPressView
        android:id="@+id/btn_to_fact"
        android:layout_width="@dimen/dp_px_220_x"
        android:layout_height="@dimen/dp_px_180_x"
        android:background="@color/transparent" />

    <include
        android:id="@+id/include_float_left"
        layout="@layout/float_left"
        android:layout_width="@dimen/dp_px_276_x"
        android:layout_height="@dimen/dp_px_692_x"
        android:layout_marginTop="@dimen/dp_px_180_x" />

    <include
        android:id="@+id/include_float_left_2"
        layout="@layout/float_left_2"
        android:layout_width="@dimen/dp_px_276_x"
        android:layout_height="@dimen/dp_px_692_x"
        android:layout_marginTop="@dimen/dp_px_180_x"
        android:visibility="gone" />


    <com.run.treadmill.widget.BlurringView
        android:id="@+id/blur_sign"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_72_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        app:blurRadius="5"
        app:downSampleFactor="3"
        app:overlayColor="#00FFFFFF" />

    <com.run.treadmill.widget.BlurringView
        android:id="@+id/blur_media"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_380_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        app:blurRadius="5"
        app:downSampleFactor="3"
        app:overlayColor="#00FFFFFF" />


    <com.run.treadmill.widget.BlurringView
        android:id="@+id/blur_quickstart"
        android:layout_width="@dimen/dp_px_544_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_688_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        app:blurRadius="5"
        app:downSampleFactor="3"
        app:overlayColor="#00FFFFFF" />

    <com.run.treadmill.widget.BlurringView
        android:id="@+id/blur_program"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_1272_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        app:blurRadius="5"
        app:downSampleFactor="3"
        app:overlayColor="#00FFFFFF" />

    <com.run.treadmill.widget.BlurringView
        android:id="@+id/blur_setting"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_1580_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        app:blurRadius="5"
        app:downSampleFactor="3"
        app:overlayColor="#00FFFFFF" />

    <TextView
        android:id="@+id/tv_home_signin"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_72_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        android:background="@drawable/btn_home_sign_out"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_px_75_x"
        android:text="Sign out"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_45"
        app:touch_effects_normal_color="@color/color_ripple_white_2"
        app:touch_effects_pressed_color="@color/color_ripple_white_1"
        app:touch_effects_radius="@dimen/dp_px_25_x" />

    <TextView
        android:id="@+id/tv_home_media"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_380_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        android:background="@drawable/btn_home_media_new"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_px_75_x"
        android:text="Media"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_45"
        app:touch_effects_normal_color="@color/color_ripple_white_2"
        app:touch_effects_pressed_color="@color/color_ripple_white_1"
        app:touch_effects_radius="@dimen/dp_px_25_x" />

    <TextView
        android:id="@+id/tv_home_quickstart"
        android:layout_width="@dimen/dp_px_544_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_688_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        android:background="@drawable/btn_home_qs"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_px_200_x"
        android:text="Quick Start"
        android:textColor="#FA198B"
        android:textSize="@dimen/font_size_65"
        app:touch_effects_normal_color="@color/color_ripple_white_2"
        app:touch_effects_pressed_color="@color/color_ripple_white_1"
        app:touch_effects_radius="@dimen/dp_px_25_x" />

    <TextView
        android:id="@+id/tv_home_program"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_1272_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        android:background="@drawable/btn_home_program_new"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_px_75_x"
        android:text="Program"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_45"
        app:touch_effects_normal_color="@color/color_ripple_white_2"
        app:touch_effects_pressed_color="@color/color_ripple_white_1"
        app:touch_effects_radius="@dimen/dp_px_25_x" />

    <TextView
        android:id="@+id/tv_home_setting"
        android:layout_width="@dimen/dp_px_268_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_px_1580_x"
        android:layout_marginBottom="@dimen/dp_px_38_x"
        android:background="@drawable/btn_home_setting_new"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_px_75_x"
        android:text="Setting"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_45"
        app:touch_effects_normal_color="@color/color_ripple_white_2"
        app:touch_effects_pressed_color="@color/color_ripple_white_1"
        app:touch_effects_radius="@dimen/dp_px_25_x" />

    <ImageView
        android:id="@+id/iv_bluetooth"
        android:layout_width="@dimen/dp_px_48_x"
        android:layout_height="@dimen/dp_px_48_x"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_px_40_x"
        android:layout_marginEnd="@dimen/dp_px_90_x"
        android:layout_toStartOf="@+id/tv_time"
        android:background="@drawable/btn_bluetooth_on"
        app:touch_effects_forbid="true"
        app:touch_effects_type="none" />

    <ImageView
        android:id="@+id/iv_wifi"
        android:layout_width="@dimen/dp_px_48_x"
        android:layout_height="@dimen/dp_px_48_x"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_px_40_x"
        android:layout_marginEnd="@dimen/dp_px_25_x"
        android:layout_toStartOf="@+id/tv_time"
        android:background="@drawable/btn_wifi_on"
        app:touch_effects_forbid="true"
        app:touch_effects_type="none" />

    <TextClock
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_px_40_x"
        android:layout_marginEnd="@dimen/dp_px_40_x"
        android:format12Hour="yyyy.MM.dd hh:mm\naa"
        android:format24Hour="yyyy.MM.dd HH:mm"
        android:gravity="end"
        android:text="2023.10.29 10:30 AM"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_45" />

    <!--Media-->
    <include
        android:id="@+id/include_home_media"
        layout="@layout/home_media"
        android:layout_width="@dimen/dp_px_1608_x"
        android:layout_height="@dimen/dp_px_660_x"
        android:layout_marginStart="@dimen/dp_px_156_x"
        android:layout_marginTop="@dimen/dp_px_210_x"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_sleep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_black"
        android:clickable="true"
        android:visibility="gone" />

    <!--加载动画-->
    <View
        android:id="@+id/v_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8000000"
        android:clickable="true"
        android:visibility="gone" />
    <!--
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_anim"
            android:layout_width="@dimen/dp_px_150_x"
            android:layout_height="@dimen/dp_px_150_x"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:lottie_autoPlay="false"
            app:lottie_fileName="anim/img_marathon_animation.json"
            app:lottie_loop="true"
            app:lottie_speed="2.0" />-->
    <!--
        <ProgressBar
            android:id="@+id/pb_loading"
            style="@style/style.zrg"
            android:layout_width="@dimen/dp_px_200_x"
            android:layout_height="@dimen/dp_px_200_x"
            android:layout_centerInParent="true"
            android:visibility="gone" />-->

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avv_load"
        android:layout_width="@dimen/dp_px_100_x"
        android:layout_height="@dimen/dp_px_100_x"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_px_800_x"
        android:visibility="gone"
        app:indicatorColor="@color/lightBlue"
        app:indicatorName="BallSpinFadeLoaderIndicator" />
</RelativeLayout>