<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_window_volume_layout"
    android:layout_width="@dimen/dp_px_498_x"
    android:layout_height="@dimen/dp_px_81_x"
    android:background="@drawable/img_volume_bk"
    android:visibility="gone">

    <com.run.treadmill.widget.LeftSeekBar
        android:id="@+id/float_window_seek_bar_voice"
        android:layout_width="@dimen/dp_px_320_x"
        android:layout_height="@dimen/dp_px_81_x"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:max="100"
        android:maxHeight="@dimen/dp_px_12_x"
        android:minHeight="@dimen/dp_px_12_x"
        android:progress="50"
        android:progressDrawable="@drawable/left_seek_bar_float_voice"
        android:splitTrack="false"
        android:thumb="@drawable/left_seek_bar_float_voice_point"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_left_volume_mute"
        android:layout_width="@dimen/dp_px_48_x"
        android:layout_height="@dimen/dp_px_48_x"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_px_30_x"
        android:background="@drawable/img_volume_loud" />

    <TextView
        android:id="@+id/tv_left_volume"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_px_35_x"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_px_5_x"
        android:text="00"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_55" />

</RelativeLayout>