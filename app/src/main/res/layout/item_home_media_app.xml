<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_px_210_x"
    android:layout_height="@dimen/dp_px_210_x">

    <ImageView
        android:id="@+id/img_media_app"
        android:layout_width="@dimen/dp_px_140_x"
        android:layout_height="@dimen/dp_px_140_x"
        android:layout_marginStart="@dimen/dp_px_35_x"
        android:layout_marginTop="@dimen/dp_px_10_x"
        android:layout_marginEnd="@dimen/dp_px_35_x"
        app:touch_effects_radius="@dimen/dp_px_34_x" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_media_app"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_px_10_x"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="Youtube"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_30" />
</RelativeLayout>