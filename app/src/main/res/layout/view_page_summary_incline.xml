<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/img_sportmode_summary_3">

    <com.run.treadmill.widget.LineGraphicView
        android:id="@+id/lgv_incline"
        android:layout_width="@dimen/dp_px_1120_x"
        android:layout_height="@dimen/dp_px_500_y"
        android:layout_marginLeft="@dimen/dp_px_273_x"
        android:layout_marginTop="@dimen/dp_px_76_y" />

    <TextView
        android:id="@+id/tv_max_incline"
        android:layout_width="@dimen/dp_px_230_x"
        android:layout_height="@dimen/dp_px_120_y"
        android:layout_marginStart="@dimen/dp_px_270_x"
        android:layout_marginTop="@dimen/dp_px_608_y"
        android:gravity="center|right"
        android:text="15.0"
        android:textColor="@color/yellow"
        android:textSize="@dimen/font_size_47pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_530_x"
        android:layout_marginTop="@dimen/dp_px_650_y"
        android:text="@string/string_unit_percent"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_25pt" />

    <TextView
        android:id="@+id/tv_min_incline"
        android:layout_width="@dimen/dp_px_230_x"
        android:layout_height="@dimen/dp_px_120_y"
        android:layout_marginStart="@dimen/dp_px_980_x"
        android:layout_marginTop="@dimen/dp_px_608_y"
        android:gravity="center|right"
        android:text="15.0"
        android:textColor="@color/yellow"
        android:textSize="@dimen/font_size_47pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_1230_x"
        android:layout_marginTop="@dimen/dp_px_650_y"
        android:text="@string/string_unit_percent"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_25pt" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_350_x"
        android:layout_marginTop="@dimen/dp_px_720_y"
        android:gravity="center"
        android:text="@string/string_summary_max_incline"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_25pt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_px_1060_x"
        android:layout_marginTop="@dimen/dp_px_720_y"
        android:gravity="center"
        android:text="@string/string_summary_min_incline"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_25pt" />
</RelativeLayout>