<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_vertical|center_horizontal">

    <RelativeLayout
        android:id="@+id/layout_reset_dialog"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_px_600_y">

        <ImageView
            android:id="@+id/btn_reset_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_pop_app_update" />

        <LinearLayout
            android:layout_width="@dimen/dp_px_1000_x"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_px_500_y"
            android:weightSum="2">

            <ImageView
                android:id="@+id/btn_pop_isee"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_px_100_x"
                android:layout_weight="1"
                android:background="@drawable/btn_isee" />

            <ImageView
                android:id="@+id/btn_pop_confirm"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_px_100_x"
                android:layout_marginStart="@dimen/dp_px_100_x"
                android:layout_weight="1"
                android:background="@drawable/btn_confirm" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
