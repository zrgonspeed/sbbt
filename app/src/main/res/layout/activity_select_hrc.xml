<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_main"
    android:layout_width="@dimen/dp_px_1280_x"
    android:layout_height="@dimen/dp_px_720_y"
    android:background="@drawable/bk_0">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_px_20_y"
        android:gravity="center"
        android:text="@string/string_hrc"
        android:textColor="@color/textView_white"
        android:textSize="@dimen/font_size_30pt"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/img_program_frame"
            android:layout_width="@dimen/dp_px_1066_x"
            android:layout_height="@dimen/dp_px_390_y"
            android:layout_marginStart="@dimen/dp_px_107_x"
            android:layout_marginTop="@dimen/dp_px_111_y"
            android:src="@drawable/img_program_frame_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_157_x"
            android:layout_marginTop="@dimen/dp_px_140_y"
            android:gravity="center"
            android:text="@string/string_select_gender"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_157_x"
            android:layout_marginTop="@dimen/dp_px_235_y"
            android:gravity="center"
            android:text="@string/string_select_age"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_157_x"
            android:layout_marginTop="@dimen/dp_px_335_y"
            android:gravity="center"
            android:text="@string/string_select_weight"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_157_x"
            android:layout_marginTop="@dimen/dp_px_430_y"
            android:gravity="center"
            android:text="@string/string_select_time"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <ImageView
            android:id="@+id/img_gender_select"
            android:layout_width="@dimen/dp_px_150_x"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_353_x"
            android:layout_marginTop="@dimen/dp_px_140_y"
            android:src="@drawable/btn_male_2" />

        <RadioGroup
            android:id="@+id/rg_info"
            android:layout_width="@dimen/dp_px_150_x"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_px_353_x"
            android:layout_marginTop="@dimen/dp_px_225_y">

            <RadioButton
                android:id="@+id/rb_age"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_weight"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:layout_marginTop="@dimen/dp_px_39_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:layout_marginTop="@dimen/dp_px_39_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

        </RadioGroup>

        <TextView
            android:id="@+id/txt_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_530_x"
            android:layout_marginTop="@dimen/dp_px_325_y"
            android:gravity="center"
            android:text="@string/string_unit_kg"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:id="@+id/txt_time_unit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_530_x"
            android:layout_marginTop="@dimen/dp_px_420_y"
            android:gravity="center"
            android:text="@string/string_unit_min"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <ImageView
            android:id="@+id/img_gender_draw"
            android:layout_width="@dimen/dp_px_450_x"
            android:layout_height="@dimen/dp_px_370_y"
            android:layout_marginStart="@dimen/dp_px_700_x"
            android:layout_marginTop="@dimen/dp_px_130_y"
            android:src="@drawable/img_gender_draw_1" />

        <RadioGroup
            android:id="@+id/rg_gender_info"
            android:layout_width="@dimen/dp_px_450_x"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginStart="@dimen/dp_px_700_x"
            android:layout_marginTop="@dimen/dp_px_130_y"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:background="@drawable/btn_male"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:layout_marginStart="@dimen/dp_px_150_x"
                android:background="@drawable/btn_female"
                android:button="@null" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/dp_px_200_x"
            android:layout_height="@dimen/dp_px_80_y"
            android:layout_marginLeft="@dimen/dp_px_110_x"
            android:layout_marginTop="@dimen/dp_px_125_y"
            android:gravity="center"
            android:text="@string/string_hrc60"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="@dimen/dp_px_200_x"
            android:layout_height="@dimen/dp_px_80_y"
            android:layout_marginLeft="@dimen/dp_px_110_x"
            android:layout_marginTop="@dimen/dp_px_220_y"
            android:gravity="center"
            android:text="@string/string_hrc80"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="@dimen/dp_px_200_x"
            android:layout_height="@dimen/dp_px_80_y"
            android:layout_marginLeft="@dimen/dp_px_110_x"
            android:layout_marginTop="@dimen/dp_px_320_y"
            android:gravity="center"
            android:text="@string/string_target_hr"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <RadioGroup
            android:id="@+id/rg_hrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_px_353_x"
            android:layout_marginTop="@dimen/dp_px_130_y"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_hrc60"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_hrc80"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:layout_marginTop="@dimen/dp_px_39_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_target_hr"
                android:layout_width="@dimen/dp_px_150_x"
                android:layout_height="@dimen/dp_px_60_y"
                android:layout_marginTop="@dimen/dp_px_39_y"
                android:background="@drawable/img_number_frame"
                android:button="@null"
                android:gravity="center"
                android:textColor="@color/textView_black"
                android:textSize="@dimen/font_size_30pt"
                android:textStyle="bold" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginLeft="@dimen/dp_px_530_x"
            android:layout_marginTop="@dimen/dp_px_131_y"
            android:gravity="center"
            android:text="@string/string_unit_bpm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginLeft="@dimen/dp_px_530_x"
            android:layout_marginTop="@dimen/dp_px_228_y"
            android:gravity="center"
            android:text="@string/string_unit_bpm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_px_60_y"
            android:layout_marginLeft="@dimen/dp_px_530_x"
            android:layout_marginTop="@dimen/dp_px_325_y"
            android:gravity="center"
            android:text="@string/string_unit_bpm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_25pt" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_next_or_back"
        android:layout_width="@dimen/dp_px_170_x"
        android:layout_height="@dimen/dp_px_77_y"
        android:layout_marginLeft="@dimen/dp_px_107_x"
        android:layout_marginTop="@dimen/dp_px_538_y"
        android:src="@drawable/btn_next" />

    <ImageView
        android:id="@+id/btn_start"
        android:layout_width="@dimen/dp_px_170_x"
        android:layout_height="@dimen/dp_px_77_y"
        android:layout_marginLeft="@dimen/dp_px_1003_x"
        android:layout_marginTop="@dimen/dp_px_538_y"
        android:src="@drawable/btn_start" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="@dimen/dp_px_460_x"
        android:layout_height="@dimen/dp_px_77_y"
        android:layout_marginLeft="@dimen/dp_px_280_x"
        android:layout_marginTop="@dimen/dp_px_538_y"
        android:gravity="center|left"
        android:text="@string/string_select_next_hrc_hint"
        android:textColor="@color/textView_white"
        android:textSize="@dimen/font_size_15pt" />

    <TextView
        android:layout_width="@dimen/dp_px_250_x"
        android:layout_height="@dimen/dp_px_77_y"
        android:layout_marginLeft="@dimen/dp_px_740_x"
        android:layout_marginTop="@dimen/dp_px_538_y"
        android:gravity="center|right"
        android:text="@string/string_select_start_hint"
        android:textColor="@color/textView_white"
        android:textSize="@dimen/font_size_15pt" />

    <include
        layout="@layout/layout_under_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_px_635_y" />
</RelativeLayout>